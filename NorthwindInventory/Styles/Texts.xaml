<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NorthwindInventory">
   
    
    <!--#region Normal text style-->

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!--#endregion-->
    
    
    <!--#region Title text style-->

    <Style TargetType="{x:Type TextBlock}" x:Key="TitleTextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontWeight" Value="Heavy" />
    </Style>

    <!--#endregion-->
    
    <!--#region Subtitle text style-->

    <Style TargetType="{x:Type TextBlock}" x:Key="SubTitleTextBlock" BasedOn="{StaticResource TitleTextBlock}">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <!--#endregion-->
    
</ResourceDictionary>